#!/usr/bin/env node
var path = require('path')
  , spaceage = require('../')
  , manifestLoc = path.resolve(process.cwd(), process.argv[2])
  , manifest
  , station

try {
  manifest = require(manifestLoc)
} catch (e) {
  console.error('Failed to load manifest ' + manifestLoc + ' with:', e.message)
}

station = spaceage
  .createStation()
  .load(manifest)
  .start()
